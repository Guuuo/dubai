<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">
	<excludes>
		<pattern>/assets/*</pattern>
		<pattern>/api/*</pattern>
	</excludes>

    <decorator name="account" page="_blank.jsp">
        <pattern>/login</pattern>
        <pattern>/register</pattern>
        <pattern>/*-password</pattern>
