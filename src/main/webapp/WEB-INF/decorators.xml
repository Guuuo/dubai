<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">
	<excludes>
		<pattern>/assets/*</pattern>
		<pattern>/api/*</pattern>
	</excludes>

    <decorator name="account" page="_account.jsp">
        <pattern>/account/login</pattern>
        <pattern>/account/register</pattern>
        <pattern>/account/reset-pwd</pattern>
    </decorator>

    <decorator name="default" page="_admin.jsp">
        <pattern>/*</pattern>
    </decorator>
</decorators>
